<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    ">

	<!-- 消息中心API接口 -->
	<bean id="mcServiceHsfProvider" class="com.inspur.hsf.config.spring.proxy.SpringProviderBean">
		<property name="interfaceName"><value>com.inspur.gcloud.ext.service.IMessageCenterService</value></property>
		<property name="target"><ref bean="mcServiceHsf"/></property>
		<property name="serviceName">
			<value>mc.mcServiceHsfProvider</value>
		</property>
	</bean>
</beans>     